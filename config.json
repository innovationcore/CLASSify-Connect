{
    "name": "CLASSify Connect",
    "description": "A tool which allows a user to connect their REDCap data to the CLASSify assisted machine learning training service.",
    "namespace": "CAAIModules\\CLASSifyConnect",
    "framework-version": 12,
    "authors": [
        {
            "name": "Noah Perry",
            "email": "noah.perry@uky.edu",
            "institution": "University of Kentucky - CAAI"
        }
    ],
    "system-settings": [],
    "project-settings": [
        {
            "key": "classify-connection",
            "name": "Connect to CLASSify",
            "required": false,
            "type": "sub_settings",
            "repeatable": false,
            "sub_settings": [
                {
                    "key": "classify-email",
                    "name": "CLASSify Email",
                    "required": true,
                    "type": "text",
                    "repeatable": false
                },
                {
                    "key": "check-account-status",
                    "name": "<button id='account-status' onclick='checkEmail()'>Check CLASSify Account Status</button><p id='response'></p>",
                    "type": "descriptive"
                },
                {
                    "key": "collaboration-request",
                    "name": "If you would like to use the CLASSify Connect plugin but do not have CLASSify access, you may fill out the <a href='https://redcap.uky.edu/redcap/surveys/?s=K7WTCDH37AXLEKNM' target='_blank'>Center for Applied AI Collaboration Request</a> form for review by our team. ",
                    "type": "descriptive"
                },
                {
					"key": "form-id",
					"name": "Form Selection",
					"required": true,
					"type": "form-list",
					"repeatable": false
				},
                {
                    "key": "class-field",
                    "name": "Select a field to use as a classifier.",
                    "required": true,
                    "type": "field-list",
                    "repeatable": false
                },
                {
                    "key": "upload-dataset",
                    "name": "<button id='upload-dataset' onclick='handleUpload()'>Upload Form Data to CLASSify</button>",
                    "type": "descriptive"
                }
            ]
        }
    ]
}
